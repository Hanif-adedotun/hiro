---
import { featureList } from "./data/features";
import { Badge } from "./ui/badge";
---

<section id="features" class="relative z-10 py-20 md:py-28" aria-labelledby="features-heading">
  <div class="container mx-auto px-4">
    <h2 id="features-heading" class="sr-only">Features</h2>
    <div class="mx-auto max-w-3xl text-center opacity-0 animate-fade-in-up" style="animation-delay: 0ms;">
      <p class="text-sm font-medium text-chart-1">Why Hiro</p>
      <h3 class="mt-2 text-3xl font-bold tracking-tight text-foreground md:text-4xl">
        Built for modern teams
      </h3>
      <p class="mt-4 text-lg text-muted-foreground">
        From GitHub integration to requirement docsâ€”everything you need to ship with confidence.
      </p>
    </div>

    <div class="mt-16 space-y-24 md:space-y-32">
      {
        featureList.map((feature, i) => (
          <article
            class={`flex flex-col gap-10 md:gap-16 md:flex-row md:items-center ${i % 2 === 1 ? "md:flex-row-reverse" : ""} opacity-0 animate-fade-in-up`}
            style={`animation-delay: ${120 + i * 100}ms;`}
          >
            <div class="flex-1 md:pr-8 md:last:pr-0 md:last:pl-8">
              <div class="rounded-2xl border border-border bg-card p-1 shadow-sm overflow-hidden">
                <img
                  src={feature.image}
                  alt=""
                  class="w-full rounded-xl object-cover"
                  width="640"
                  height="360"
                  loading="lazy"
                />
              </div>
            </div>
            <div class="flex-1">
              <h4 class="text-2xl font-bold tracking-tight text-foreground md:text-3xl">
                {feature.title}
                {feature.coming_soon && (
                  <Badge variant="outline" className="ml-2 align-middle text-xs">Coming soon</Badge>
                )}
              </h4>
              <p class="mt-4 text-lg leading-relaxed text-muted-foreground">
                {feature.description}
              </p>
            </div>
          </article>
        ))
      }
    </div>
  </div>
</section>
