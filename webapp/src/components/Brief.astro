---
import VectorOne from "../assets/ui-one.svg";
import VectorTwo from "../assets/ui-two.svg";
import VectorThree from "../assets/ui-three.svg";

import Bolt from "../assets/bolt.svg";
import Money from "../assets/money.svg";
import Wallet from "../assets/wallet.svg";
import Secure from "../assets/lock.svg";
import { featureList } from "./data/features";
import { Badge } from "./ui/badge";
---

<section class="product-brief" id="features">
  <div class="container">
    <!-- Feature Two -->

    {
      featureList.map((feature, i) => (
        <div class="row product-brief-items items-center my-20">
          {i % 2 === 0 && (
            <div class="brief-media center one-half column border-dotted border-4 border-orange-400">
              <img src={feature.image} class="object-contain w-full" />
            </div>
          )}

          <div class="brief-tab one-half column text-white">
            <h3 class="h2-title">{feature.title} </h3>
            {feature.coming_soon && (
              <Badge variant={"outline"} className="text-base">
                Coming Soon
              </Badge>
            )}

