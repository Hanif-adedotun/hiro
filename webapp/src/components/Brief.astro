---
import { featureList } from "./data/features";
import { Badge } from "./ui/badge";
---

<section class="" id="features">
  <div class="container">
    {
      featureList.map((feature, i) => (
        <div
          class={`flex flex-col md:flex-row items-center mb-84 opacity-0 translate-y-8 animate-fade-in-up`}
          style={{
            animationDelay: `${i * 120 + 100}ms`,
            animationFillMode: "forwards",
          }}
        >
          {i % 2 === 1 ? (
            <>
              <div class="w-full md:w-2/5 text-white mb-6 md:mb-0">
                <h3 class="text-3xl font-bold mb-4">
                  {feature.title}{" "}
                  {feature.coming_soon && (
                    <Badge variant={"outline"} className="text-base mb-4">
                      Coming Soon
                    </Badge>
                  )}
                </h3>
                <p class="text-lg leading-relaxed">{feature.description}</p>
              </div>
              <div class="w-full md:w-3/5 md:pr-8">
                <div class="border-dotted border-4 border-orange-400 rounded-2xl overflow-hidden bg-[#0a0a0a]">
                  <img src={feature.image} class="object-contain w-full" />
                </div>
              </div>
            </>
          ) : (
            <>
              <div class="w-full md:w-3/5 md:pr-8 mb-6 md:mb-0">
                <div class="border-dotted border-4 border-orange-400 rounded-2xl overflow-hidden bg-[#0a0a0a]">
                  <img src={feature.image} class="object-contain w-full" />
                </div>
              </div>
              <div class="w-full md:w-2/5 text-white">
                <h3 class="text-3xl font-bold mb-4">
                  {feature.title}
                  {feature.coming_soon && (
                    <Badge variant={"outline"} className="text-base mb-4">
                      Coming Soon
                    </Badge>
                  )}
                </h3>
                <p class="text-lg leading-relaxed">{feature.description}</p>
              </div>
            </>
          )}
        </div>
      ))
    }
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(32px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.7s cubic-bezier(0.22, 1, 0.36, 1) both;
  }
</style>
