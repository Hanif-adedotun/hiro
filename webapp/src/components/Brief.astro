<style lang="scss">
  .product-brief {
    // background-color: var(--tenary);
    .hero-brand {
      padding-bottom: 50px;
      .brands {
        margin-top: 15px;
      }
    }
    .product-brief-items {
      margin-bottom: 100px;
      .brief-tab {
        padding-top: 50px;
      }
    }

    .feature-grid {
      display: flex;
      p {
        margin: 0 0 0 10px;
      }
      img {
        width: 25px;
        margin-top: -10px;
      }
    }

    .brief-media {
      height: 350px;
      position: relative;
      overflow: hidden;
      background-color: #0a0a0a;
      // padding-top: 40px;

      border-radius: 20px;
      img {
        object-fit: cover;
      }
    }

    @media (max-width: 700px) {
      .brief-tab {
        margin-left: 20px;
      }
    }
  }
