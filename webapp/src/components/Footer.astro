---
// import LinkedIn from "../assets/linkedin.svg";
import X from "../assets/x.svg";
import Github from "../assets/github.svg";
---

<footer>
  <div class="container row">
    <div class="footer-link flex js one-half column">
      <a href="#">About</a>
      <a href="https://github.com/Hanif-adedotun/hiro/CONTRIBUTING.md"
        >Contribute</a
      >
    </div>
    <div class="footer-note one-half column">
      <div class="u-pull-right">
        <div class="flex">
          <p>Â© Hanif 2025</p>
          <a href="https://x.com/@devhanif"
            ><img src={X.src} alt="Twitter icon" /></a
          >
          <a href="https://github.com/Hanif-adedotun/hiro"
            ><img src={Github.src} alt="Github icon" /></a
          >
        </div>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  .flex {
    display: flex;
  }
  footer {
    padding: 40px 0;
    background-color: transparent;

    a,
    p {
      color: white;
      font-size: 1.8rem;
    }
    .footer-link a {
      padding-right: 20px;
      text-decoration: none;
    }
    .container {
      padding: 30px;
      border-radius: 50px;

      .footer-note {
        a {
          padding-left: 20px;
          img {
            width: 28px;
            @media (max-width: 700px) {
              width: 20px;
            }
          }
        }
      }
    }
    @media (max-width: 700px) {
      p,
      a {
        font-size: 1.5rem;
      }
      .flex {
        justify-content: center;
      }
      .column {
        padding: 10px 0;
      }
      .u-pull-right {
        float: none;
      }
    }
  }
</style>
