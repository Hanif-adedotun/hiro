---
import Bomb from "../assets/languages/flask.svg";
import Mailbox from "../assets/languages/go.svg";
import Folder from "../assets/languages/java.svg";
import Savings from "../assets/languages/nextjs.svg";
import Gift from "../assets/languages/python.svg";
import Typewriter from "astro-typewriter";
import { Button } from "./ui/button";
import { Badge } from "./ui/badge";
import { ArrowRight } from "@lucide/astro";
---

<section>
  <header class="relative z-10 w-full mx-auto px-8">
    <div class="pt-20 pb-14 flex flex-col items-center text-center">
      <Badge
        className="inline-block mb-6 px-8 py-4 bg-orange-900/60 text-orange-400 font-semibold rounded-full text-sm tracking-wide uppercase"
      >
        AI-Powered Test Generation & Documentation
      </Badge>
      <h1 class="font-extrabold text-white leading-tight mb-6 max-w-[60%]">
        Let AI handle<br class="hidden md:block" />
        <span
          class="text-transparent bg-gradient-to-tr from-orange-400 via-yellow-400 to-orange-200 bg-clip-text drop-shadow-lg"
          >your testing</span
        >, so you can <span class="text-white">focus on building.</span>
      </h1>
      <p class="text-lg text-zinc-300 mb-8 max-w-[50%]">
        Hiro automatically writes comprehensive unit tests and requirement
        documentation for any codebase. Language agnostic. Zero setup. Always in
        sync.
      </p>
    </div>
    <div class="flex flex-col sm:flex-row gap-4 justify-center mb-2">
      <a
        href="#"
        class="inline-flex items-center gap-2 px-7 py-3 rounded-xl font-semibold bg-gradient-to-r from-orange-500 via-yellow-400 to-orange-400 text-black shadow-xl shadow-orange-900/30 hover:from-orange-600 hover:to-yellow-500 transition-all hover:scale-105 text-base"
      >
        Try Beta
        <ArrowRight size={20} class="-mr-1" />
      </a>
      <a
        href="#features"
        class="inline-flex items-center gap-2 px-7 py-3 font-semibold text-white bg-zinc-900/80 border border-orange-800 hover:bg-zinc-900/90 hover:border-orange-400 rounded-xl shadow transition-all hover:scale-105 text-base"
      >
        See Features
      </a>
    </div>
  </header>
</section>

