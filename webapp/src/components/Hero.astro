---
import Bomb from "../assets/languages/flask.svg";
import Mailbox from "../assets/languages/go.svg";
import Folder from "../assets/languages/java.svg";
import Savings from "../assets/languages/nextjs.svg";
import Gift from "../assets/languages/python.svg";
import Typewriter from "astro-typewriter";
import { Button } from "./ui/button";
---

<section class="product-hero">
  <div class="container">
    <div class="d-table">
      <div class="d-table-cell center">
        <div class="hero-copy">
          <Typewriter
            messages={["Generate Test Cases at One Click with AI"]}
            class="h1-title"
          />
          <p>
            Hiro automatically creates comprehensive unit tests for your
            codebase, saving you time and improving code quality. Works with any
            programming language or testing framework.
          </p>
          <div class="product-cta">
            <Button variant={"default"} className="u-full-width">
              Try Hiro â€” It's Free
            </Button>
          </div>
        </div>
      </div>
    </div>
    <div class="hero-media">
      <img src={Bomb.src} alt="Dynamite" />
      <img src={Mailbox.src} alt="Mailbox" />
      <img src={Folder.src} alt="Folder" />
      <img src={Savings.src} alt="Money" />
      <img src={Gift.src} alt="Gift" />
    </div>
  </div>
</section>

