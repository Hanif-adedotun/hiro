<style lang="scss">
  .product-hero {
    padding: 100px 0;
    .container {
      position: relative;
      .d-table {
        height: 500px;
      }
    }
    .hero-media {
      padding: 5px;
      border-radius: 48px;
    }
    .hero-copy {
      h1,
      p {
        max-width: 600px;
        margin: 20px auto;
        color: white;
      }
    }
    .typing-animation {
      min-height: 0.5em;
      border-right: 2px solid white;
      animation: blink 0.75s step-end infinite;
    }
    @keyframes blink {
      from,
      to {
        border-color: transparent;
      }
      50% {
        border-color: white;
      }
    }
    .hero-media {
      img {
        position: absolute;
        width: 160px;
        &:nth-child(1) {
          top: 0;
          left: -100px;
        }
        &:nth-child(2) {
          top: 0;
          right: -100px;
        }
        &:nth-child(3) {
          top: 250px;
          left: 0;
        }
        &:nth-child(4) {
          top: 250px;
          right: 0;
        }
        &:nth-child(5) {
          bottom: -20px;
          left: 50%;
          transform: translateX(-50%);
        }
      }
      @media (max-width: 700px) {
        img {
          &:nth-child(2),
          &:nth-child(3),
          &:nth-child(4) {
            display: none;
          }
        }
      }
    }
  }
</style>
